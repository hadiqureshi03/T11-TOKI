    padding: 4rem 0;
    min-height: calc(100vh - 200px);
  }

  .work-detail-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
  }

  .back-button {
    display: inline-block;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: white;
    background-color: #DDBA4E;
    text-decoration: none;
    margin-bottom: 2rem;
    padding: 0.75rem 1.5rem;
    border: 2px solid #000;
    border-radius: 10px;
    transition: opacity 0.3s;
  }

  .back-button:hover {
    opacity: 0.8;
  }

  .work-header {
    margin-bottom: 3rem;
  }

  .work-main-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    letter-spacing: 2px;
    color: #333;
    margin-bottom: 2rem;
  }

  .work-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .meta-item {
    display: flex;
    gap: 1rem;
  }

  .meta-label {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #333;
    min-width: 80px;
  }

  .meta-value {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.85rem;
    font-weight: 400;
    color: #666;
  }

  .work-content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .work-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .work-image-large {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    display: block;
  }

  .work-image-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .work-image-small {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .work-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .text-section-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .text-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .text-section-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(0.9rem, 1.2vw, 1rem);
    font-weight: 700;
    letter-spacing: 1px;
    color: #333;
  }

  .text-section-content {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(0.8rem, 1vw, 0.9rem);
    font-weight: 400;
    line-height: 1.6;
    color: #333;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .work-content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .work-detail {
      padding: 3rem 0;
    }
  }

  @media (max-width: 768px) {
    .work-detail {
      padding: 2rem 0;
    }

    .work-detail-container {
      padding: 0 1.5rem;
    }

    .work-header {
      margin-bottom: 2rem;
    }

    .work-main-title {
      font-size: 2rem;
      letter-spacing: 1px;
    }

    .meta-item {
      flex-direction: column;
      gap: 0.25rem;
    }

    .meta-label {
      min-width: auto;
    }

    .work-content-grid {
      gap: 2rem;
    }

    .back-button {
      font-size: 0.85rem;
      padding: 0.6rem 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .work-detail {
      padding: 1.5rem 0;
    }

