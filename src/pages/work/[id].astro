---
import Navbar from '../../components/navbar.astro';
import Footer from '../../components/footer.astro';
import { supabase } from '../../lib/supabase.js';

export async function getStaticPaths() {
  const { data: projects, error } = await supabase
    .from('TOKI Projects')
    .select('*');

  if (error) {
    console.error('Supabase error:', error);
    return [];
  }

  if (!projects || projects.length === 0) {
    console.error('No projects found');
    return [];
  }

  return projects.map((project) => ({
    params: { id: project.id.toString() },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<!DOCTYPE html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{project.title} - TOKI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <Navbar />

    <main class="work-detail">
      <div class="work-detail-container">
        <!-- Back Button -->
        <a href="/" class="back-button">‚Üê Back to Home</a>

        <!-- Header Section -->
        <div class="work-header">
          <h1 class="work-main-title">{project.title}</h1>

          <div class="work-meta">
            <div class="meta-item">
              <p class="meta-label">Client</p>
              <p class="meta-value">{project.client}</p>
            </div>
            <div class="meta-item">
              <p class="meta-label">Location</p>
              <p class="meta-value">{project.location}</p>
            </div>
            <div class="meta-item">
              <p class="meta-label">Timeline</p>
              <p class="meta-value">{project.timeline}</p>
            </div>
          </div>
        </div>

        <!-- Content Grid -->
        <div class="work-content-grid">
          <!-- Left: Images -->
          <div class="work-images">
            <img src={project.image_url} alt={project.title} class="work-image-large" />
            <div class="work-image-row">
              <img src={project.image_url_2} alt={`${project.title} detail 1`} class="work-image-small" />
              <img src={project.image_url_3} alt={`${project.title} detail 2`} class="work-image-small" />
            </div>
          </div>

          <!-- Right: Text Content -->
          <div class="work-text">
            <div class="text-section">
              <h3 class="text-section-title">THE BRIEF</h3>
              <p class="text-section-content">{project.brief}</p>
            </div>

            <div class="text-section-row">
              <div class="text-section">
                <h3 class="text-section-title">THE OUTCOME</h3>
                <p class="text-section-content">{project.outcome}</p>
              </div>

              <div class="text-section">
                <h3 class="text-section-title">KEY LEARNINGS</h3>
                <p class="text-section-content">{project.learnings}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Montserrat', sans-serif;
    background-color: #FAF2E7;
    color: #333;
  }

  .work-detail {
