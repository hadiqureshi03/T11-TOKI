      padding: 0 1rem;
    }

    .work-main-title {
      font-size: 1.75rem;
    }

    .back-button {
      font-size: 0.8rem;
      padding: 0.5rem 1rem;
      margin-bottom: 1.5rem;
    }

    .text-section {
      gap: 0.5rem;
    }

    .text-section-title {
      font-size: 0.95rem;
    }

    .text-section-content {
      font-size: 0.85rem;
      line-height: 1.5;
    }
  }
</style>
