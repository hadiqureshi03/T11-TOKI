---
import heroImage from '../assets/heroimg.jpg';
---

<section class="hero">
  <div class="hero-background">
    <img src={heroImage.src} alt="TOKI packaging" />
  </div>
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title">
        SUSTAINABLE<br />
        PACKAGING<br />
        SOLUTIONS
      </h1>
      <p class="hero-subtitle">
        Creating sustainable packaging and<br />
        fulfillment solutions for a better tomorrow
      </p>
      <button class="hero-button">CONTACT</button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    background-color: #E8DCC8;
    padding: 6rem 2rem;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
    border-bottom: 2px solid #000;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-content {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    z-index: 2;
  }

  .hero-text {
    max-width: 600px;
  }

  .hero-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 5vw;
    font-weight: 700;
    letter-spacing: 0.3vw;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #DDBA4E;
    text-shadow:
      -2px -2px 0 #000,
      2px -2px 0 #000,
      -2px 2px 0 #000,
      2px 2px 0 #000;
  }

  .hero-subtitle {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(0.8rem, 2vw, 1rem);
    font-weight: 600;
    line-height: 1.6;
    color: white;
    margin-bottom: 2rem;
  }

  .hero-button {
    font-family: 'Montserrat', sans-serif;
    background-color: #DDBA4E;
    color: white;
    border: 2px solid #000;
    border-radius: 10px;
    padding: clamp(0.6rem, 1.5vw, 0.8rem) clamp(1.5rem, 3vw, 2.5rem);
    font-size: clamp(0.75rem, 1.8vw, 0.9rem);
    font-weight: 600;
    letter-spacing: 1px;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .hero-button:hover {
    opacity: 0.8;
  }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 1.5rem;
      min-height: 500px;
    }

    .hero-text {
      max-width: 90%;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 2.5rem 1rem;
      min-height: 400px;
    }

    .hero-text {
      max-width: 100%;
    }

    .hero-background img {
      object-position: 65% center;
    }
  }
</style>