<section id="contact" class="cta">
  <div class="cta-container">
    <h2 class="cta-title">GET IN TOUCH WITH US</h2>
    <button class="cta-button">CONTACT US</button>
  </div>
</section>

<style>
  .cta {
    background-color: #FAF2E7;
    padding: 8rem 0;
    border-bottom: 2px solid #000;
  }

  .cta-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .cta-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    letter-spacing: 2px;
    color: #333;
  }

  .cta-button {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(0.75rem, 1.8vw, 0.9rem);
    font-weight: 600;
    letter-spacing: 1px;
    color: white;
    background-color: #DDBA4E;
    border: 2px solid #000;
    border-radius: 10px;
    padding: clamp(0.6rem, 1.5vw, 0.8rem) clamp(1.5rem, 3vw, 2.5rem);
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .cta-button:hover {
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta {
      padding: 6rem 0;
    }

    .cta-container {
      padding: 0 1.5rem;
      gap: 2rem;
    }
  }

  @media (max-width: 480px) {
    .cta {
      padding: 5rem 0;
    }

    .cta-container {
      padding: 0 1rem;
      gap: 1.5rem;
    }

    .cta-button {
      padding: 1rem 2.5rem;
    }
  }
</style>
